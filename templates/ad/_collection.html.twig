
{% block _ad_images_widget %}
    <p>Ici vous pouvez ajouter les images de vos annonces </p>
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">Ajouter une image</button>
    </div>
{% endblock %}


{% block _ad_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}


{% block _ad_images_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-md-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url) }}

                    </div>
                    <div class="col">
                        {{ form_widget(form.caption) }}

                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger">X
                </button>
            </div>

        </div>
    </div>
{% endblock %}