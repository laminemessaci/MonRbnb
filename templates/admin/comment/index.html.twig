{% extends 'admin/base.html.twig' %}

{% block title %}Commentaires {% endblock %}

{% block body %}
    <div class="h2 text-center m-3">Administration des commentaires</div>
    <div class="container-responsive mt-5">

        <div class="table-responsive">
            <table class="table table-striped table-dark text-white table-hover">

                <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th style="width:40%;">Commentaire</th>
                    <th>Note</th>
                    <th>Annonce</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for comment in comments %}
                    <tr>
                        <td class="text-center">{{ comment.id }}</td>
                        <td>
                            <h6>{{ comment.createdAt | date('d/m/Y H:i') }}</h6>
                        </td>

                        <td>
                            <div class="d-flex align-items-center"><img class="rounded-circle"
                                                                        src="{{ comment.author.picture }}"
                                                                        width="30"><span
                                        class="ml-2">{{ comment.author.fullName }}</span>
                            </div>
                        </td>
                        <td style="width:40%;">{{ comment.content }}</td>
                        <td class="font-weight-bold"><span class="badge badge-primary">{{ comment.rating }}</span></td>
                        <td>{{ comment.ad.title }}</td>
                        <td>
                            <a href="" class="btn btn-danger"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class="btn btn-primary"><i
                                        class="fas fa-edit"></i> </a>
                            <a href="{{ path('admin_comment_delete', {'id': comment.id}) }}" class="btn btn-danger"><i
                                        class="fas fa-trash"></i> </a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
