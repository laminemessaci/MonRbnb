{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces !{% endblock %}

{% block body %}
    <div class="h2 text-center my-5"><i class="fas fa-tachometer-alt"></i> Dashboard <i class="fas fa-tachometer-alt"></i></div>
    <div class="container-fluid">

        <div class="row">
            <div class="col ">
                <div class="bg-primary mb-5 text-center rounded">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.users }} utilisateurs inscrits</h4>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col ">
                <div class="bg-light mb-5 text-center rounded">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-hotel fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.ads }} Annonces postées</h4>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col ">
                <div class="bg-warning mb-5 text-center rounded">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.bookings }} Réservations</h4>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col ">
                <div class="bg-success mb-5 text-center rounded">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.comments }} avis</h4>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <hr>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h3 class="h3 alert alert-heading my-3"><i class="fas fa-sort-amount-up"></i> Les annonces
                        populaires
                    </h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-dark text-white table-hover">
                            <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Proprio</th>
                                <th>Moyenne</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for ad in bestAds %}
                                <tr>
                                    <td>{{ ad.title }}</td>
                                    <td>
                                        <div class="d-flex align-items-center"><img class="rounded-circle"
                                                                                    src="{{ ad.picture }}"
                                                                                    width="30"><span
                                                    class="ml-2">{{ ad.firstName }} {{ ad.lastName }}</span>
                                        </div>
                                    </td>
                                    <td class="text-center"><span
                                                class="badge badge-dark">{{ ad.note | number_format(2, ",", " ") }}</span>
                                    </td>
                                </tr>

                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger">
                    <h3 class="h3 alert alert-heading my-3"><i class="fas fa-sort-amount-down"></i> Les mauvais annonces
                    </h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-dark text-white table-hover">
                            <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Proprio</th>
                                <th>Moyenne</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for ad in worstAds %}
                                <tr>
                                    <td>{{ ad.title }}</td>
                                    <td>
                                        <div class="d-flex align-items-center"><img class="rounded-circle"
                                                                                    src="{{ ad.picture }}"
                                                                                    width="30"><span
                                                    class="ml-2">{{ ad.firstName }} {{ ad.lastName }}</span>
                                        </div>
                                    </td>
                                    <td class="text-center"><span
                                                class="badge badge-dark">{{ ad.note | number_format(2, ",", " ") }}</span>
                                    </td>
                                </tr>

                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>
{% endblock %}
